{
  "version": 2,
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "DATABASE_URL": "$DATABASE_URL",
      "NEXTAUTH_SECRET": "$NEXTAUTH_SECRET",
      "NEXTAUTH_URL": "$NEXTAUTH_URL",
      "ENCRYPTION_KEY": "$ENCRYPTION_KEY",
      "JWT_SECRET": "$JWT_SECRET",
      "NEXT_PUBLIC_ML_API_URL": "$NEXT_PUBLIC_ML_API_URL"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
